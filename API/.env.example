# ===========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to:
# - .env.dev for development
# - .env.qa for QA/staging
# - .env.prod for production
# Then fill in the appropriate credentials for each environment
#
# To switch environments, use: ./switch-env.sh [dev|qa|prod]
# Or set: ENVIRONMENT=dev|qa|prod
# ===========================================

ENVIRONMENT=development

# ===========================================
# OpenAI Configuration (Required)
# Get from: https://platform.openai.com/api-keys
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# WhatsApp Cloud API (Required)
# Get from: Meta Developer Portal > Your App > WhatsApp > API Setup
# ===========================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# ===========================================
# External APIs (Optional but Recommended)
# ===========================================
# fal.ai (Image Generation) - https://fal.ai/dashboard/keys
FAL_KEY=your-fal-api-key

# Tavily (Search) - https://tavily.com/
TAVILY_API_KEY=your-tavily-api-key

# Serper (Google Search) - https://serper.dev/
SERPER_API_KEY=your-serper-api-key

# News API - https://newsapi.org/
NEWS_API_KEY=your-news-api-key

# OpenWeather - https://openweathermap.org/api
OPENWEATHER_API_KEY=your-weather-api-key

# Railway API (Train Status) - RapidAPI
RAILWAY_API_KEY=your-railway-api-key

# Astrology API
ASTROLOGY_API_KEY=your-astrology-api-key

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=unified_platform_dev
POSTGRES_SCHEMA=agentic
PGVECTOR_TABLE=pdf_vectors

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# LangSmith (Observability - Optional)
# Get from: https://smith.langchain.com/
# ===========================================
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=unified-platform
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ===========================================
# Security Configuration
# ===========================================
# Generate JWT secret: openssl rand -hex 32
JWT_SECRET_KEY=your-secure-jwt-secret-min-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# CORS Configuration
# ===========================================
# Development: use "*"
# Production: use comma-separated list of allowed origins
CORS_ORIGINS=*

# ===========================================
# Logging & Debug
# ===========================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Set to true for in-memory storage (no database)
LITE_MODE=false

# ===========================================
# Application Settings
# ===========================================
DEFAULT_LANGUAGE=en
AUTO_DETECT_LANGUAGE=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ===========================================
# OAuth Integrations (Optional)
# ===========================================
# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/settings/gmail/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/settings/github/callback

# Slack OAuth
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:3000/settings/slack/callback
SLACK_TOKEN=

# Atlassian/Jira OAuth
ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=
ATLASSIAN_REDIRECT_URI=http://localhost:3000/settings/jira/callback

# Uber OAuth
UBER_CLIENT_ID=
UBER_CLIENT_SECRET=
UBER_REDIRECT_URI=http://localhost:3000/settings/uber/callback

# ===========================================
# Firebase Configuration (Optional)
# ===========================================
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
